<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="TOP_LEFT" minHeight="135" spacing="6" GridPane.columnIndex="0">
      <padding>
        <Insets top="10" right="12" bottom="10" left="15" />
      </padding>

      <!-- Header: Index + Name + Captain Badge -->
      <HBox spacing="6" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
        <Label fx:id="captainBadge" text="â­ CAPTAIN" styleClass="captain-badge" />
      </HBox>

      <!-- Team & Position Row -->
      <HBox fx:id="teamPositionRow" spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="teamLabel" styleClass="team-info-label" />
        <Label fx:id="positionLabel" styleClass="position-info-label" />
      </HBox>

      <!-- Injury Status Row -->
      <HBox fx:id="injuryStatusRow" spacing="6" alignment="CENTER_LEFT">
        <Label fx:id="injuryLabel" />
      </HBox>

      <!-- Contact Information Block -->
      <GridPane styleClass="contact-block" hgap="8" vgap="4">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" minWidth="25" prefWidth="25" maxWidth="25" />
          <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <Label fx:id="phoneIcon" text="ðŸ“ž" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label fx:id="emailIcon" text="ðŸ“§" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="email" styleClass="cell_small_label" text="\$email" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label fx:id="addressIcon" text="ðŸ“" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="address" styleClass="cell_small_label" text="\$address" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </GridPane>

      <!-- Tags at bottom -->
      <FlowPane fx:id="tags" hgap="6" vgap="4" />

    </VBox>
  </GridPane>
</HBox>
