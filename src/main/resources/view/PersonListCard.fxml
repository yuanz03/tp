<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="0"  />
      <ColumnConstraints hgrow="NEVER" minWidth="0" />
    </columnConstraints>
    <VBox alignment="TOP_LEFT" minHeight="135" spacing="6" GridPane.columnIndex="0">
      <padding>
        <Insets top="10" right="12" bottom="10" left="15" />
      </padding>

      <!-- Header: Index + Name + Captain Badge -->
      <HBox spacing="6" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" wrapText="true" styleClass="cell_name_label" />
        <Label fx:id="captainBadge" GridPane.columnIndex="1" text="⭐ CAPTAIN" styleClass="captain-badge" />
      </HBox>

      <!-- Team Row -->
      <HBox fx:id="teamRow" spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="teamIcon" text="📋" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="teamLabel" wrapText="true" styleClass="team-info-label" />
      </HBox>

      <!-- Position Row -->
      <HBox fx:id="positionRow" spacing="10" alignment="CENTER_LEFT">
          <Label fx:id="positionIcon" text="⚽" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="1" />
          <Label fx:id="positionLabel" wrapText="true" styleClass="position-info-label" />
      </HBox>

      <!-- Injury Status Row -->
      <HBox fx:id="injuryStatusRow" spacing="6" alignment="CENTER_LEFT">
        <FlowPane fx:id="injuries" hgap="6" vgap="4"/>
      </HBox>

      <!-- Contact Information Block -->
      <GridPane styleClass="contact-block" hgap="8" vgap="4">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" minWidth="25" prefWidth="25" maxWidth="25" />
          <ColumnConstraints hgrow="ALWAYS" minWidth="0" />
        </columnConstraints>
        <Label fx:id="phoneIcon" text="📞" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="phone" wrapText="true" styleClass="cell_small_label" text="\$phone" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label fx:id="emailIcon" text="📧" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="email" wrapText="true" styleClass="cell_small_label" text="\$email" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label fx:id="addressIcon" text="📍" styleClass="contact-icon" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="address" wrapText="true" styleClass="cell_small_label" text="\$address" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </GridPane>

      <!-- Tags at bottom -->
      <FlowPane fx:id="tags" hgap="6" vgap="4" />

    </VBox>
  </GridPane>
</HBox>
